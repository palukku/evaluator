      xmlns="http://javafx.com/javafx/21"
      fx:controller="dev.phlp.stud.evaluator.controller.CommentPaneController"
      spacing="4.0">
    <children>
        <Label text="Kommentar"/>
        <TextArea
                fx:id="commentTextArea"
                promptText="Optionaler Kommentar"
                wrapText="true"
                prefRowCount="3"/>
    </children>
    <padding>
        <Insets top="0"
                right="0"
                bottom="0"
                left="0"/>
    </padding>
</VBox>
