<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<BorderPane
        xmlns:fx="http://javafx.com/fxml/1"
        xmlns="http://javafx.com/javafx/21"
        fx:controller="dev.phlp.stud.evaluator.controller.BatchCommandRunnerController">
    <padding>
        <Insets top="12"
                right="12"
                bottom="12"
                left="12"/>
    </padding>
    <top>
        <VBox spacing="4">
            <Label fx:id="headerLabel"
                   text="Kategorie"
                   style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
            <Label text="Fuehre alle untergeordneten Kommandos nacheinander aus."/>
        </VBox>
    </top>
    <left>
        <VBox spacing="8">
            <Label text="Unteraufgaben"
                   style="-fx-font-weight: bold;"/>
            <ListView
                    fx:id="taskListView"
                    prefWidth="320"
                    VBox.vgrow="ALWAYS"/>
        </VBox>
    </left>
    <center>
        <VBox spacing="12">
            <Label fx:id="taskTitleLabel"
                   text="Aufgabe: -"
                   style="-fx-font-size: 15px; -fx-font-weight: bold;"/>
            <HBox spacing="20"
                  alignment="CENTER_LEFT">
                <VBox spacing="2">
                    <Label text="Status"
                           style="-fx-font-weight: bold;"/>
                    <Label fx:id="statusValueLabel"
                           text="-"/>
                </VBox>
                <VBox spacing="2">
                    <Label text="Exit-Code"
                           style="-fx-font-weight: bold;"/>
                    <Label fx:id="exitCodeValueLabel"
                           text="-"/>
                </VBox>
                <VBox spacing="2">
                    <Label text="Max. Punkte"
                           style="-fx-font-weight: bold;"/>
                    <Label fx:id="maxPointsValueLabel"
                           text="-"/>
                </VBox>
                <VBox spacing="2">
                    <Label text="Punkte"
                           style="-fx-font-weight: bold;"/>
                    <Spinner
                            fx:id="pointsSpinner"
                            prefWidth="140"/>
                </VBox>
            </HBox>
            <Label text="Ausgabe"
                   style="-fx-font-weight: bold;"/>
            <TextArea
                    fx:id="logArea"
                    prefRowCount="12"
                    wrapText="false"
                    VBox.vgrow="ALWAYS"/>
        </VBox>
    </center>
    <bottom>
        <HBox spacing="10"
              alignment="CENTER_RIGHT">
            <padding>
                <Insets top="8"/>
            </padding>
            <ProgressIndicator
                    fx:id="progressIndicator"
                    prefWidth="32"
                    prefHeight="32"/>
            <Button fx:id="closeButton"
                    text="Schliessen"/>
        </HBox>
    </bottom>
</BorderPane>
